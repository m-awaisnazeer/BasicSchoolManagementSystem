<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hamzasabir.schoolmanagementsystem">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.usamatariq.schoolmanagementsystem.AdmissionRequestActivity"></activity>
        <activity android:name="com.usamatariq.schoolmanagementsystem.ApplyForAdmissionsActivity" />
        <activity android:name="com.usamatariq.schoolmanagementsystem.AddStaffActivity" />
        <activity
            android:name="com.usamatariq.schoolmanagementsystem.ViewImageActivity"
            android:theme="@style/Splash" />
        <activity android:name="com.usamatariq.schoolmanagementsystem.ViewSchoolActivity" />
        <activity
            android:name="com.usamatariq.schoolmanagementsystem.AdminLogin"
            android:theme="@style/NoActionBarMainActivity" />
        <activity
            android:name="com.usamatariq.schoolmanagementsystem.StudentLogin"
            android:theme="@style/NoActionBarMainActivity" />
        <activity
            android:name="com.usamatariq.schoolmanagementsystem.StudentDashboard"
            android:theme="@style/NoActionBarMainActivity" />
        <activity
            android:name="com.usamatariq.schoolmanagementsystem.SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.usamatariq.schoolmanagementsystem.MainActivity"
            android:theme="@style/NoActionBarMainActivity" />
    </application>

</manifest>