<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.usamatariq.schoolmanagementsystem.dialogs.ShowResultFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Release Result For"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:padding="5dp"
        android:id="@+id/idddd"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textAlignment="center"
        android:layout_below="@id/idddd"
        android:padding="10dp"
        android:id="@+id/selected_student_name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edt_enter_total_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="40dp"
        android:textSize="19sp"
        android:layout_below="@+id/selected_student_name"
        android:background="@android:color/transparent"
        android:hint="Enter Total Marks"
        />

    <EditText
        android:id="@+id/edt_enter_obtained_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/edt_enter_total_marks"
        android:background="@android:color/transparent"
        android:hint="Enter Obtained Marks"
        android:textSize="19sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_enter_obtained_marks"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="35dp" />

</RelativeLayout>